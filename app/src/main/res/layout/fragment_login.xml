<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    tools:context="shutdown.chalmergps.jacobth.snapcha.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="18dp"
        android:fitsSystemWindows="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editUser"
            android:lines="1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/editPassword" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:id="@+id/loginButton"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttonshape"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:id="@+id/textView3"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/editUser"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:id="@+id/textView4"
            android:textColor="@android:color/darker_gray"
            android:layout_above="@+id/editUser"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Log In"
            android:id="@+id/textView2"
            android:layout_above="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:paddingBottom="16dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassword"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="That's not the right password. Sorry!"
            android:id="@+id/textView9"
            android:textColor="@color/colorRed"
            android:visibility="invisible"
            android:layout_below="@+id/editPassword"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/log_loader"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/spinner"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:paddingBottom="28dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
